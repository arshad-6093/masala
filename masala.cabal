name:                masala
version:             0.2.0.0
-- synopsis:
-- description:
-- license:
-- license-file:        LICENSE
author:              Stuart Popejoy
maintainer:          spopejoy@panix.com
-- copyright:
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
                  Masala.VM
                  Masala.VM.Types
                  Masala.VM.Dispatch
                  Masala.VM.Memory
                  Masala.VM.Gas
                  Masala.Ext.Simple
                  Masala.Instruction
                  Masala.RPC
                  Masala.Repl
                  Masala.Word
  -- other-modules:
  -- other-extensions:
  ghc-options: -Wall
  build-depends:
                    base >=4.7 && <4.18
                , aeson
                , bytestring
                , containers >= 0.5
                , cryptonite
                , data-dword
                , directory
                , hspec
                , lens
                , lens-aeson
                , memory
              , mtl
              , servant
              , snap-core
              , snap-server
              -- , snap-core-cors
                , split
                , text
                , transformers
                , unordered-containers
                , vector
  hs-source-dirs:      src
  default-language:    Haskell2010

executable masala
  main-is:             Masala.hs
  build-depends:       base < 5
                     , masala
  hs-source-dirs:      executables
  default-language:    Haskell2010

test-suite tests
  type: exitcode-stdio-1.0
  main-is: Tests.hs
  -- ghc-options: -w -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs: tests
  default-language:    Haskell2010
  build-depends:
                  aeson
                , base
                , bytestring
                , containers
                , directory
                , hspec
                , lens
                , masala
                , text
                , vector
